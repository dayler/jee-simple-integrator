<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>SimpleEmployees</servlet-name>
        <servlet-class>org.proydesa.jee.integrator.controller.AllEmployees</servlet-class>
        <!-- <init-param>
            <param-name>param</param-name>
            <param-value>paramValue</param-value>
        </init-param> -->
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimpleEmployees</servlet-name>
        <url-pattern>/SimpleEmployees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <!-- <welcome-file>faces/welcome.jsp</welcome-file> -->
        <welcome-file>SimpleEmployees</welcome-file>
    </welcome-file-list>
    <ejb-ref>
        <ejb-ref-name>EmployeeManager</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>org.proydesa.jee.integrator.bean.EmployeeManagerRemote</remote>
        <ejb-link>SimpleEmployeeManager</ejb-link>
    </ejb-ref>
</web-app>
